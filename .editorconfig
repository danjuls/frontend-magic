# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = false

# Coffeescript
[*.coffee]
indent_style = space
indent_size = 2

# SASS
[*.sass]
indent_style = space
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2
